<%= form_for @book, html: {class: "nifty_form"}, remote: true do |f| %>
    <%= label_tag(:tomes_count, "Томов") %>
    <%= f.number_field :tomes_count, in: 1..20, step: 1, required: true, placeholder: "Введите количество томов"%><br>
    <%= label_tag(:author, "Автор") %>
    <%= f.text_field :author, required: true, placeholder: "Введите автора" %><br>
    <%= label_tag(:title, "Название") %>
    <%= f.text_field :title, required: true, placeholder: "Введите название" %><br>
    <%= label_tag(:genre, "Жанр") %>
    <%= f.text_field :genre, required: true, placeholder: "Введите жанр" %><br>
    <%= label_tag(:publisher, "Издательство") %>
    <%= f.text_field :publisher, required: true, placeholder: "Введите издательство" %><br>  
    <%= label_tag(:year, "Год издания") %>
    <%= f.number_field :year, in: 0..9999, step: 1, required: true, placeholder: "Введите год издания" %><br>
    <%= label_tag(:price, "Цена") %>
    <%= f.number_field :price, in: 0.01..99999.99, step: 0.01, required: true, placeholder: "Введите цену" %><br>  
    <%= label_tag(:name, "ФИО взявшего книгу") %>
    <%= f.text_field :name, placeholder: "Укажите кто взял книгу" %><br>
    <%= label_tag(:comment, "Примечания") %>
    <%= f.text_field :comment, placeholder: "Введите примечания" %><br>
    <%= f.submit "Добавить" %>
<% end %>